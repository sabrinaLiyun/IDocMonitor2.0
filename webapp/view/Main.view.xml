<mvc:View height="100%" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:filterbar="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core" xmlns:semantic="sap.f.semantic" xmlns:f="sap.f" xmlns:variants="sap.ui.comp.variants"
	controllerName="com.bosch.idocmonitor.controller.Main" id="main">
	<f:DynamicPage headerExpanded="true" showFooter="true" class="sapUiSizeCompact">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<variants:VariantManagement standardItemText="IDoc"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader pinnable="true">
				<f:content>
					<filterbar:FilterBar useToolbar="false" search="onSearch" filterBarExpanded="false" filterContainerWidth="14rem">
						<filterbar:filterItems>
							<filterbar:FilterItem label="{i18n>lssender}" name="LSSender">
								<filterbar:control>
									<Input id="inputLSSender" type="Text" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false" required="true"
										valueStateText="Invalid entry" maxLength="0" liveChange="inputChange"/>
								</filterbar:control>
							</filterbar:FilterItem>
							<filterbar:FilterItem label="{i18n>lsreceiver}" name="LSReceiver">
								<filterbar:control>
									<Input id="inputLSReceiver" type="Text" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false"
										required="true" valueStateText="Invalid entry" maxLength="0" liveChange="inputChange"/>
								</filterbar:control>
							</filterbar:FilterItem>
							<filterbar:FilterItem label="{i18n>msgType}" name="IDocMsgType">
								<filterbar:control>
									<Input id="inputMsgType" type="Text" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false" required="true"
										valueStateText="Invalid entry" maxLength="0" liveChange="inputChange"/>
								</filterbar:control>
							</filterbar:FilterItem>
							<filterbar:FilterItem label="{i18n>compCode}" name="CompCode">
								<filterbar:control>
									<MultiInput id="compCode" required="true" showValueHelp="true" valueHelpRequest=".onValueHelpRequest" tokenUpdate="compCodeChange"/>
								</filterbar:control>
							</filterbar:FilterItem>
							<filterbar:FilterItem label="{i18n>adnSender}" name="ADNSender">
								<filterbar:control>
									<Input id="inputADNSender" type="Text" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false"
										required="false" valueStateText="Invalid entry" maxLength="0"/>
								</filterbar:control>
							</filterbar:FilterItem>
							<filterbar:FilterItem label="{i18n>adnReceiver}" name="ADNReceiver">
								<filterbar:control>
									<Input id="inputADNReceiver" type="Text" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false"
										required="false" valueStateText="Invalid entry" maxLength="0"/>
								</filterbar:control>
							</filterbar:FilterItem>
							<filterbar:FilterItem label="{i18n>dateRange}" name="PostDate">
								<filterbar:control>
									<DateRangeSelection id="dateRange" width="auto" displayFormat="medium" required="true" valueStateText="Invalid entry" enabled="true"
										visible="true" change="inputChange"/>
								</filterbar:control>
							</filterbar:FilterItem>
							<filterbar:FilterItem label="{i18n>fiscalYear}" name="Year">
								<filterbar:control>
									<ComboBox id="year" required="true" items="{path: 'years>/arrayYears' }" change="inputChange">
										<core:Item text="{years>year}"/>
									</ComboBox>
								</filterbar:control>
							</filterbar:FilterItem>
							<filterbar:FilterItem label="{i18n>idocStatus}" name="idocStatus">
								<filterbar:control>
									<ComboBox id="idocStatus" items="{path: 'status>/arrayStatus' }">
										<core:Item text="{status>value}"/>
									</ComboBox>
								</filterbar:control>
							</filterbar:FilterItem>
						</filterbar:filterItems>
					</filterbar:FilterBar>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<Table id="idocTable" inset="false" noDataText="{i18n>nodata}" growingScrollToLoad="true" growingThreshold="25"
				updateFinished=".onUpdateFinished" items="{path:'/IDOCMV2SET', sorter:{path:'Bukrs'}}">
				<headerToolbar>
					<Toolbar>
						<Title id="tableTitle"></Title>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column width="auto" minScreenWidth="Phone">
						<header>
							<Text text="Transaction ID" width="auto"/>
						</header>
					</Column>
					<Column width="auto" minScreenWidth="Phone">
						<header>
							<Text text="LS for Sender" width="auto"/>
						</header>
					</Column>
					<Column width="auto" minScreenWidth="Phone">
						<header>
							<Text text="Outbounding IDoc #" width="auto"/>
						</header>
					</Column>
					<Column width="auto" minScreenWidth="Phone">
						<header>
							<Text text="Outbounding IDoc Status" width="auto"/>
						</header>
					</Column>
					<Column width="auto" minScreenWidth="Tablet" demandPopin="true">
						<header>
							<Text text="LS for Receiver" width="auto"/>
						</header>
					</Column>
					<Column width="auto" minScreenWidth="Tablet" demandPopin="true">
						<header>
							<Text text="Inbounding IDoc #" width="auto"/>
						</header>
					</Column>
					<Column width="auto" minScreenWidth="Tablet" demandPopin="true">
						<header>
							<Text text="Inbounding IDoc Status" width="auto"/>
						</header>
					</Column>
					<Column width="auto" minScreenWidth="Tablet" demandPopin="true">
						<header>
							<Text text="Company Code" width="auto"/>
						</header>
					</Column>
					<Column width="auto" minScreenWidth="Tablet" demandPopin="true">
						<header>
							<Text text="Fiscal Year" width="auto"/>
						</header>
					</Column>
					<Column width="auto" minScreenWidth="Tablet" demandPopin="true">
						<header>
							<Text text="Accounting Doc. No. in Sender" width="auto"/>
						</header>
					</Column>
					<Column width="auto" minScreenWidth="Tablet" demandPopin="true">
						<header>
							<Text text="Accounting Doc. No. in Receiver" width="auto"/>
						</header>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{Tid}"/>
						</cells>
						<cells>
							<Text text="{Sndprn}"/>
						</cells>
						<cells>
							<Text text="{SndBelnr}"/>
						</cells>
						<cells>
							<Text text="{SndStatus}"/>
						</cells>
						<cells>
							<Text text="{Rcvprn}"/>
						</cells>
						<cells>
							<Text text="{RcvBelnr}"/>
						</cells>
						<cells>
							<Text text="{RcvStatus}"/>
						</cells>
						<cells>
							<Text text="{Bukrs}"/>
						</cells>
						<cells>
							<Text text="{Gjahr}"/>
						</cells>
						<cells>
							<Text text="{SndDocnum}"/>
						</cells>
						<cells>
							<Text text="{RcvDocnum}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>
	</f:DynamicPage>
</mvc:View>